{
  "openapi": "3.0.0",
  "info": {
    "title": "RentxAPI documentation",
    "description": "Documentation for rentxAPI who serve cars rent services.",
    "version": "1.0.0",
    "contact": {
      "email": "pedroliveirabreu@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "get": {
        "tags": ["Category"],
        "summary": "List categories",
        "description": "List all cars categories",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Category"],
        "summary": "Create category",
        "description": "Create a new car category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Sedan",
                  "description": "Carros sedan de 3 módulos"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specification"],
        "summary": "Create specification",
        "description": "Create a new car specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Câmbio automático",
                  "description": "Carros com câmbio automático eletrônico"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Specification already exists"
          }
        }
      }
    }
  }
}
